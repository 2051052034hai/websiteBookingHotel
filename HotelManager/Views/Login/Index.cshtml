
@{
    ViewBag.title = "Đăng nhập";

}



<link rel="stylesheet" type="text/css" href="~/static/css/login.css" media="all">
<script src="~/static/js/validate_input.js" type="text/javascript"></script>

<style>
    .invalid {
        color: red;
        font-size: 12px;
    }

    .input-error {
        border: 1px solid red !important;
        outline: 1px solid red !important;
    }

    div.form-item > label {
        padding-top: 5px;
        color: black !important;
        display: block;
        font-size: 15px !important;
    }

    div.form-item input {
        margin-bottom: 5px;
    }

    div.form-btn {
        margin-top: 5px;
    }
    .btn-submit {
        border: 1px solid #F36F36;
        background-color:#F36F36;
        color: white;
        border-radius: 2px;
        margin-right: 10px;
    }

    .btn-submit:hover {
        background-color: #EE0000;
    }
</style>
<div class="alls">
    <div class="alls-form">
        <h4>ĐĂNG NHẬP TÀI KHOẢN</h4>
        @if (ViewBag.FailMsg != null)
        {
            <div class="alert alert-danger show text-center">
                <strong >@ViewBag.FailMsg</strong>
            </div>
        }
        @using (Html.BeginForm("Login", "Login", FormMethod.Post, new { @class = "form-main", id = "form-2" }))
        {
            <div class="form-item">
                <label>Email: </label>
                @if (ViewBag.Email != null)
                {
                    <input id="email" name="email" type="text" placeholder="Nhập email..." value="@ViewBag.Email">
                }
                else
                {
                    <input id="email" name="email" type="text" placeholder="Nhập email...">
                }
                <span class="form-message"></span>
            </div>

            <div class="form-item">
                <label>Mật khẩu: </label>
                <input id="password" name="password" type="password" placeholder="Nhập mật khẩu..." />
                <span class="form-message"></span>
            </div>

            <button type="submit" class="btn-submit">Đăng nhập</button>
            @Html.ActionLink("Đăng ký", "Register", "Login", null, new { @class = "a-link" })
        }
        <div class="final-button">
            <h5>Hoặc đăng nhập bằng</h5>
            <div>
                <a href="" class="btn btn-twitter tw"> <i class="fab fa-twitter"></i>   Đăng nhập bằng Twitter</a>
                <a href="" class="btn  btn-facebook fb"> <i class="fab fa-facebook-f"></i>   Đăng nhập bằng facebook</a>
            </div>
        </div>
    </div>
</div>

<script>
    Validator({
        form: '#form-2',
        formGroupSelector: '.form-item',
        errorSelector: '.form-message',
        rules: [
            Validator.isEmail("#email"),
            Validator.minLength('#password', 6)
        ]
    })
</script>