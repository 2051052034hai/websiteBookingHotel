
@{
    ViewBag.Title = "Thêm Sản Phẩm";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
@using PhoneShop.DTO;
<style>
    #userTable th,
    #userTable td {
        border: 1px solid #ccc;
        padding: 8px;
        text-align: left;
    }

    #userTable th {
        background-color: #f2f2f2;
    }

    #userTable tr:nth-child(even) {
        background-color: #f9f9f9;
    }

    #userTable tr:hover {
        background-color: #ddd;
    }

    .search-buttons {
        border-radius: 3px;
        border: 1px solid black;
        padding: 5px 10px;
        font-size: 14px;
        cursor: pointer;
    }

    .text-right {
        text-align: right !important;
    }

    .main-seach {
        margin-bottom: 5px;
        float: right;
        top: 10px;
        right: 10px;
    }

    #userTable {
        border-collapse: collapse;
    }

        #userTable th,
        #userTable td {
            border: none;
            background-color: #fff;
            border-top: 1px solid #dee2e6;
            vertical-align: middle;
        }

    body {
        background: #f1f1f1;
    }

    div.all-tables {
        border-collapse: collapse;
        background-color: #fff;
        padding: 20px 25px;
        margin-left: 5%;
        margin-top: 5%;
        margin-right: 3%;
    }

    .btn-rounded {
        width: 47px;
    }

    #userTable {
        width: 100%;
    }

    div.form-item > label {
        padding-top: 5px;
        color: black !important;
        display: block;
        font-size: 15px !important;
    }

    div.form-item input {
        margin-bottom: 5px;
    }

    div.form-btn {
        margin-top: 5px;
    }
    .buttonAdd {
       background-color: dodgerblue; 
       color: white; 
       border: 1px solid dodgerblue;
    }
    .invalid{
        color:red;
        font-size:15px;
    }
</style>


<div class="all-tables">
    <h1 class="text-center text-info m-t-10">Thêm sản phẩm</h1>
    <div id="userTable">
        @using (Html.BeginForm("AddProduct", "Product_62132473", FormMethod.Post, new { @class = "form-main", id = "form-add" }))
        {
                <div class="form-item">
                    <label>Tên sản phẩm: </label>
                    <input id="name" name="name" class=" form-control" type="text" placeholder="Nhập tên sản phẩm">
                    <span class="form-message"></span>
                </div>

                

                <div class="form-item">
                    <label>Đơn giá: </label>
                    <input id="UnitPrice" class=" form-control" name="UnitPrice" type="text" placeholder="Nhập giá tiền">
                    <span class="form-message"></span>
                </div>

                <div class="form-item">
                    <label>Số lượng: </label>
                    <input id="UnitInStock" name="UnitInStock" class=" form-control" type="text" placeholder="Nhập số lượng">
                    <span class="form-message"></span>
                </div>

                <div class="dropdown">
                    <label>Chọn danh mục: </label>
                    <select class="form-control" id="CateID" name="CateID">
                        @foreach (var cate in ViewBag.Categories)
                        {
                            <option value="@cate.MaLoaiSP">
                                @cate.TenLoaiSP
                            </option>
                        }
                    </select>
                    <span class="form-message"></span>
                </div>
                
                <div class="form-item">
                    <label>Mô tả: </label>
                    <textarea id="Description" name="Description" class=" form-control" type="text" placeholder="Nhập mô tả"></textarea>
                    <span class="form-message"></span>
                </div>
                <div class="form-item">
                    <label>Hình ảnh: </label>
                    <input id="Image_Url" name="Image_Url" class=" form-control" type="text" placeholder="Nhập link hình ảnh" />
                    <span class="form-message"></span>
                </div>
                 <button type="submit" class="form-submit buttonAdd">Xác nhận</button>          
        }
    </div>
</div>

<script>
    Validator({
        form: '#form-add',
        formGroupSelector: '.form-item',
        errorSelector: '.form-message',
        rules: [
            Validator.isRequired('#name', "Vui lòng nhập tên sản phẩm !"),
            Validator.isRequired('#UnitPrice', "Vui lòng nhập đơn giá sản phẩm !"),
            Validator.isRequired('#UnitInStock', "Vui lòng nhập đơn giá sản phẩm !"),
        ]
    })
</script>