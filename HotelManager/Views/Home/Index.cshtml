@{
    ViewBag.Title = "Trang chủ";
}

<style>
    .ega-home-slider .owl-dots {
        bottom:30px !important;
    }
    .styleDescription {
        color: black;
        font-size: 14px;
        max-height: 30px;
        overflow: hidden;
        text-overflow: ellipsis;
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
        margin-top:0px;
        padding: 0px 20px;
    }
</style>

<div class="page-content container">
    <!----------------Phần ảnh trượt slice đầu trang web--------------->
    <section class="ega-section-1">
        <div id="ega-home-slider" class="ega-home-slider owl-carousel owl-theme owl-loaded owl-drag">
            <!-- Slide 1 -->
            <div class="owl-item active" style="width: 1160px;">
                <div class="item">
                    <a href="#" title="phòng" class="clearfix">
                        <img style="width: 1200px; height: 350px" class="img-slider-home" data-max-width="1160" src="~/static/image/room_1.png" alt="Tất cả sản phẩm">
                    </a>
                </div>
            </div>

            <!-- Slide 2 -->
            <div class="owl-item" style="width: 1160px;">
                <div class="item">
                    <a href="#" title="phòng" class="clearfix">
                        <img style="width: 1200px; height:350px" class="img-slider-home" data-max-width="1160" src="~/static/image/room_2.png" alt="Tất cả sản phẩm">
                    </a>
                </div>
            </div>

            <!-- Slide 3 -->
            <div class="owl-item" style="width: 1160px;">
                <div class="item">
                    <a href="#" title="phòng" class="clearfix">
                        <img style="width: 1200px; height:350px" class="img-slider-home" data-max-width="1160" src="~/static/image/room_3.png" alt="Tất cả sản phẩm">
                    </a>
                </div>
            </div>
        </div>

        <!-- Nút bấm -->
        <div class="owl-dots">
            <div class="owl-dot active"><span></span></div>
            <div class="owl-dot"><span></span></div>
        </div>

        <script>
            $(document).ready(function () {
                $('#ega-home-slider').owlCarousel({
                    items: 1,
                    loop: true,
                    nav: true,
                    navText: ["<span class='glyphicon glyphicon-menu-left'></span>", "<span class='glyphicon glyphicon-menu-right'></span>"],
                    dots: true
                });
            });
        </script>
    </section>



    <!--session: collection that include in main menu-->

    <section class="ega-home-collection">

        @if (ViewBag.typeRooms != null)
        {
            foreach (var c in ViewBag.typeRooms)
            {
<div class="ega-home-slider-products hidden-xs">
    <div class="row">
        <div class="col-xs-6">
            <h2 class="home-product-name">
                <a href="#" title="Thực phẩm, đồ uống" class="ega-home-collection-name-title">
                    @c.name
                </a>
            </h2>
        </div>
    </div>

    <div class="ega-home-product-items">
        <div class="owl-carousel owl-theme ega-products-owl-carousel owl-loaded owl-drag"
             data-count="10" data-url="/thuc-pham-do-uong">

            @foreach (var p in ViewBag.Rooms)
            {
                if (p.typeRoom == c.id)
                {
<div class="owl-stage-outer">
    <div class="owl-item active" style="width: 190px;">
        <div class="item">
            <a class="ega-home-product-link"
               href="/Room/Room/@p.id"
               title="@p.name">
                <img class="center-block"
                     src="@p.image"
                     alt="@p.image">
                <div>
                    <h3 class="ega-home-product-name">
                        @p.name
                    </h3>
                    <h3 class="styleDescription">
                        @p.description
                    </h3>
                    <div class="ega-main-price-home">
                        @{ var formattedPrice = string.Format("{0:N0}đ/ ngày", p.unitPrice); }
                        @formattedPrice
                    </div>
                </div>

            </a>
